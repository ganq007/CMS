            <Button
                android:padding="5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/selector_mycar_btu"
                android:text="停止"
                android:textSize="32dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>